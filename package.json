{
  "name": "@sigiljs/openapi-transformer",
  "version": "0.0.0",
  "description": "Configurable openapi transformer that converts sigil framework custom route definitions and schema metadata into OpenAPI 3.0 JSON",
  "main": "dist/openapi-transformer.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "vite build -- --production"
  },
  "engines": {
    "node": ">=24.0.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/openapi-transformer.mjs",
      "require": "./dist/openapi-transformer.js"
    }
  },
  "keywords": [
    "router",
    "http",
    "typescript",
    "zero-dependencies",
    "fast-routing",
    "node"
  ],
  "author": "Kurai Foundation",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.18",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kurai-foundation/openapi-transformer.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/kurai-foundation/openapi-transformer/issues"
  },
  "homepage": "https://github.com/kurai-foundation/openapi-transformer#readme"
}
